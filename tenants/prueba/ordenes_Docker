COMANDOS seguro y recomendado ENTORNO MULTI-TENANT
# Limpiar contenedores detenidos (no afecta a los activos)
docker container prune -f
# Limpiar imágenes realmente huérfanas (no las usadas por tenants)
docker image prune -f
# Limpiar solo volúmenes realmente sin uso  Seguro mientras tengas contenedores levantados (cuidado)
docker volume prune -f
# Limpiar la caché de builds
docker builder prune -f
# Ver estado después de la limpieza
docker system df
df -h
code /usr/local/bin
code /var/log/docker_cleanup_safe.log

# probarlo manualmente
/usr/local/bin/docker_cleanup_safe.sh

////////////////////////////////////////////////////////////////////////////
#### Construye las imágenes comunes (backend y frontend)
D:\py\onegat\app
docker compose -f docker-compose.local.build.yml build --no-cache
#### Reconstruir imagen del backend (sin caché)
cd /opt/onegat/app
docker compose -f docker-compose.local.build.yml build --no-cache backend

#### Comprueba que los contenedores estén en ejecución
docker ps

############################################################################### Levanta el tenant limpio
D:\py\onegat\tenants\laroda
D:\py\onegat\tenants\prueba
# por si quedó algo previo (esto no borra imágenes compartidas)
docker compose -f docker-compose.local.prod.yml down -v

# levanta usando las imágenes que acabas de construir

docker compose -f docker-compose.local.prod.yml --env-file .env.local up -d
docker compose -f docker-compose.local.prod.yml --env-file .env.local down
# (opcional) parar antes
docker compose -f docker-compose.local.prod.yml --env-file .env.local down
# levantar y reconstruir
docker compose -f docker-compose.local.prod.yml --env-file .env.local up -d --build
//////////////////////////////////////////////////////////////////////////
############################################################################### Modif codigo en backend o frontend
PASO 1 — Recompilar la imagen global del backend
D:\py\onegat\app
docker compose -f docker-compose.local.build.yml build backend --no-cache
PASO 2 — Reiniciar el backend del tenant que quieras
D:\py\onegat\tenants\laroda
D:\py\onegat\tenants\prueba
docker compose -f docker-compose.local.prod.yml up -d backend --force-recreate

//////////////////////////////////////////////////////////////////////////
# Ver estado
docker ps --format "table {{.Names}}\t{{.Status}}\t{{.Ports}}"

#### Observa los logs de arranque (migraciones)
docker logs -f backend.prueba.onegat.es-backend

# Comprobaciones rápidas - Debe listar tus tablas.
docker exec -it backend.prueba.onegat.es-backend alembic current
docker exec -it prueba-db-1 psql -U user -d colonia_gatos -c '\dt'

# Acceso bd
docker exec -it prueba-db-1 psql -U user -d colonia_gatos

SELECT * FROM users;
SELECT * FROM gatos;
SELECT * FROM colonias;
SELECT * FROM partes;
SELECT * FROM campanas;
SELECT * FROM campanas_gatos;
SELECT * FROM inspecciones;
SELECT * FROM quejas;
SELECT * FROM usuarios_colonias;

DELETE FROM quejas;    ////// borrar todas las quejas
ALTER SEQUENCE quejas_id_seq RESTART WITH 1;      ////// deseas resetear el contador de id
DELETE FROM campanas WHERE id = 1;
DELETE FROM users WHERE id > 1;
DELETE FROM gatos WHERE id BETWEEN 2 AND 18;

ALTER TABLE quejas ADD COLUMN archivo VARCHAR(255);   /////Crear el campo manualmente en PostgreSQL///////
ALTER TABLE users ADD COLUMN accepted_terms BOOLEAN DEFAULT FALSE;
ALTER TABLE users ADD COLUMN accepted_terms_date TIMESTAMP;

///actualizar manualmente el campo accepted_demo_terms a false (y opcionalmente limpiar la fecha)
SELECT column_name, data_type 
FROM information_schema.columns 
WHERE table_name = 'quejas';

UPDATE colonias
SET latitude = 39.199336, longitude = -2.155380
WHERE id = 4;

UPDATE users
SET accepted_demo_terms = FALSE,
    accepted_demo_terms_date = NULL
WHERE username = 'admin';

UPDATE users
SET accepted_terms = FALSE,
    accepted_terms_date = NULL
WHERE username = 'admin';
